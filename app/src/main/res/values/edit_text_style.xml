<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="editTextStyle" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/edit_text_color_selector</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/edit_text_color_selector</item>
        <item name="labelStyle">@color/edit_text_color_selector</item>
        <item name="colorControlActivated">@color/edit_text_color_selector</item>
        <item name="hintTextAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/edit_text_color_selector</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/edit_text_color_selector</item>
        <item name="endIconTint">@color/edit_text_color_selector</item>
        <item name="startIconTint">@color/edit_text_color_selector</item>
        <item name="hintTextAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="CustomAutoCompleteTextView" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:popupTheme">@style/popupMenuStyle</item>
        <item name="android:dropDownSelector">#B2DDFF</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:backgroundTint">#EBF6FF</item>
    </style>
</resources>